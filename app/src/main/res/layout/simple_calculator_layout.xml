<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayoutSimpleCalc"
    android:padding="10dp">

    <Button
        android:id="@+id/button_7"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/button_7"
        style="@style/buttons_number_size" />

    <Button
        android:id="@+id/button_8"
        android:layout_alignBaseline="@+id/button_7"
        android:layout_alignBottom="@+id/button_7"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/button_7"
        android:text="@string/button_8"
        style="@style/buttons_number_size" />

    <Button
        android:id="@+id/button_9"
        android:layout_alignBaseline="@+id/button_8"
        android:layout_alignBottom="@+id/button_8"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/button_8"
        android:text="@string/button_9"
        style="@style/buttons_number_size" />

    <Button
        android:id="@+id/button_4"
        android:layout_alignEnd="@+id/button_7"
        android:layout_below="@+id/button_7"
        android:layout_marginTop="30dp"
        android:text="@string/button_4"
        style="@style/buttons_number_size" />

    <Button
        android:id="@+id/button_5"
        android:layout_alignEnd="@+id/button_8"
        android:layout_alignTop="@+id/button_4"
        android:text="@string/button_5"
        style="@style/buttons_number_size" />

    <Button
        android:id="@+id/button_6"
        android:layout_alignBottom="@+id/button_5"
        android:layout_alignStart="@+id/button_9"
        android:text="@string/button_6"
        style="@style/buttons_number_size" />

    <Button
        android:id="@+id/button_1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_4"
        android:layout_marginTop="30dp"
        android:text="@string/button_1"
        style="@style/buttons_number_size" />

    <Button
        android:id="@+id/button_2"
        android:layout_alignStart="@+id/button_5"
        android:layout_alignTop="@+id/button_1"
        android:text="@string/button_2"
        style="@style/buttons_number_size" />

    <Button
        android:id="@+id/button_3"
        android:layout_alignBaseline="@+id/button_2"
        android:layout_alignBottom="@+id/button_2"
        android:layout_alignStart="@+id/button_6"
        android:text="@string/button_3"
        style="@style/buttons_number_size" />

    <Button
        android:id="@+id/button_0"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_1"
        android:layout_marginTop="30dp"
        android:text="@string/button_0"
        style="@style/buttons_number_size" />

    <Button
        android:id="@+id/button_comma"
        android:layout_alignEnd="@+id/button_2"
        android:layout_alignTop="@+id/button_0"
        android:text="@string/button_comma"
        style="@style/buttons_number_size" />

    <Button
        android:id="@+id/button_equal"
        android:layout_alignStart="@+id/button_3"
        android:layout_alignTop="@+id/button_comma"
        android:text="@string/button_equal"
        style="@style/buttons_number_size" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_0"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/textview_result" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_9"
        android:layout_marginStart="37dp"
        android:layout_toEndOf="@+id/button_9"
        android:text="@string/button_add" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_add"
        android:layout_alignTop="@+id/button_6"
        android:text="@string/button_minus" />

    <Button
        android:id="@+id/button_multiplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_minus"
        android:layout_alignTop="@+id/button_3"
        android:text="@string/button_multiplication" />

    <Button
        android:id="@+id/button_division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_equal"
        android:layout_alignStart="@+id/button_multiplication"
        android:text="@string/button_division" />
</RelativeLayout>